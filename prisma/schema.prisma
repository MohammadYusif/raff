// prisma/schema.prisma
// Raff E-Commerce Discovery Platform Database Schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================
// MERCHANT MODEL
// ============================================

model Merchant {
  id            String  @id @default(cuid())
  name          String
  nameAr        String?
  email         String  @unique
  userId        String? @unique
  user          User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  phone         String?
  logo          String?
  description   String? @db.Text
  descriptionAr String? @db.Text

  // Zid Integration (PRIMARY - Phase 1)
  zidStoreId      String?   @unique
  zidStoreUrl     String?
  zidAccessToken  String?   @db.Text
  zidRefreshToken String?   @db.Text
  zidTokenExpiry  DateTime?
  zidManagerToken String?   @db.Text

  // Salla Integration (SECONDARY - Phase 2)
  sallaStoreId      String?   @unique
  sallaStoreUrl     String?
  sallaAccessToken  String?   @db.Text
  sallaRefreshToken String?   @db.Text
  sallaTokenExpiry  DateTime?

  // Status & Approval
  status          MerchantStatus @default(PENDING)
  approvedAt      DateTime?
  approvedBy      String?
  rejectionReason String?        @db.Text

  // Settings
  isActive         Boolean   @default(true)
  autoSyncProducts Boolean   @default(false)
  lastSyncAt       DateTime?

  // Commission Settings
  commissionRate Decimal @default(5.00) @db.Decimal(5, 2)

  // Relations
  products       Product[]
  clickTrackings ClickTracking[]
  outboundClickEvents OutboundClickEvent[]
  commissions    Commission[]
  orders         Order[]
  fraudSignals   FraudSignal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([zidStoreId])
  @@index([sallaStoreId])
  @@index([email])
}

// ============================================
// PRODUCT MODEL
// ============================================

model Product {
  id String @id @default(cuid())

  title         String
  titleAr       String?
  description   String? @db.Text
  descriptionAr String? @db.Text

  price         Float
  currency      String @default("SAR")
  originalPrice Float?

  images    String[]
  thumbnail String?

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags       String[]

  // Platform Integration
  sallaProductId     String?
  sallaVariantId     String?
  sallaUrl           String?
  zidProductId       String?
  externalProductUrl String?

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  isActive Boolean @default(true)
  inStock  Boolean @default(true)
  quantity Int?

  trendingScore Float @default(0)
  viewCount     Int   @default(0)
  clickCount    Int   @default(0)
  orderCount    Int   @default(0)

  slug            String  @unique
  metaTitle       String?
  metaDescription String?

  orders         Order[]
  savedByUsers   User[]          @relation("SavedProducts")
  clickTrackings ClickTracking[]
  outboundClickEvents OutboundClickEvent[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  lastSyncedAt DateTime?

  @@unique([sallaProductId, merchantId])
  @@unique([zidProductId, merchantId])
  @@index([merchantId])
  @@index([categoryId])
  @@index([trendingScore])
  @@index([isActive, inStock])
  @@index([slug])
  @@index([zidProductId])
}

// ============================================
// CATEGORY MODEL
// ============================================

model Category {
  id            String  @id @default(cuid())
  name          String
  nameAr        String?
  slug          String  @unique
  description   String? @db.Text
  descriptionAr String? @db.Text
  icon          String?
  image         String?

  parentId String?
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryHierarchy")

  order    Int     @default(0)
  isActive Boolean @default(true)

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([parentId])
}

// ============================================
// ORDER MODEL
// ============================================

model Order {
  id String @id @default(cuid())

  // Optional internal order number (for future Raff checkout)
  orderNumber String? @unique

  merchantId String?
  merchant   Merchant? @relation(fields: [merchantId], references: [id], onDelete: SetNull)

  platform Platform?

  customerId String?
  customer   User?   @relation(fields: [customerId], references: [id], onDelete: SetNull)

  // Optional PII for platform orders (recommended optional)
  customerName  String?
  customerEmail String?
  customerPhone String?

  // Platform orders may not map to a single Product
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  quantity   Int    @default(1)
  totalPrice Float
  currency   String @default("SAR")

  // Zid Integration
  zidOrderId String? @unique
  zidStatus  String?

  // Salla Integration
  sallaOrderId String? @unique
  sallaStatus  String?

  shippingAddress Json?
  shippingCity    String?
  shippingMethod  String?

  status OrderStatus @default(PENDING)

  trackingNumber String?
  trackingUrl    String?

  paymentMethod String?
  paymentStatus String?

  // IMPORTANT CHANGE:
  // Remove @unique to allow multiple orders attributed to the same clickTracking
  clickTrackingId String?
  clickTracking   ClickTracking? @relation(fields: [clickTrackingId], references: [id], onDelete: SetNull)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  confirmedAt DateTime?
  shippedAt   DateTime?
  deliveredAt DateTime?

  @@index([customerId])
  @@index([productId])
  @@index([status])
  @@index([createdAt])
  @@index([merchantId])
  @@index([platform])
  @@index([zidOrderId])
  @@index([sallaOrderId])
  @@index([clickTrackingId])
}

// ============================================
// USER MODEL
// ============================================

model User {
  id String @id @default(cuid())

  name   String
  email  String  @unique
  phone  String?
  avatar String?

  passwordHash  String
  emailVerified DateTime?

  role     UserRole @default(CUSTOMER)
  language String   @default("ar")

  orders          Order[]
  savedProducts   Product[]       @relation("SavedProducts")
  clickTrackings  ClickTracking[]
  accounts        Account[]
  sessions        Session[]
  merchantProfile Merchant?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  @@index([email])
  @@index([role])
}

// ============================================
// NEXTAUTH MODELS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// CLICK TRACKING MODEL
// ============================================

model ClickTracking {
  id String @id @default(cuid())

  trackingId String @unique

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  referrerUrl String? @db.Text
  ipAddress   String?
  userAgent   String? @db.Text

  destinationUrl String   @db.Text
  platform       Platform

  sessionId String? @unique

  // Keeps "first conversion happened" info (optional but useful)
  converted Boolean @default(false)

  // conversionId might collide across platforms, so DON'T make it globally unique.
  conversionId    String?
  conversionValue Decimal? @db.Decimal(10, 2)
  commissionValue Decimal? @db.Decimal(10, 2)
  commissionRate  Decimal? @db.Decimal(5, 2)

  // Relations
  orders      Order[]
  commissions Commission[] // IMPORTANT CHANGE: one click can produce many commissions

  clickedAt   DateTime      @default(now())
  convertedAt DateTime?
  expiresAt   DateTime
  FraudSignal FraudSignal[]

  @@unique([platform, conversionId])
  @@index([trackingId])
  @@index([userId])
  @@index([productId])
  @@index([merchantId])
  @@index([sessionId])
  @@index([clickedAt])
  @@index([converted])
  @@index([expiresAt])
  @@index([conversionId])
}

// ============================================
// OUTBOUND CLICK EVENT MODEL
// ============================================

model OutboundClickEvent {
  id String @id @default(cuid())

  trackingId String?

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  platform Platform

  ipHash        String?
  userAgentHash String?

  qualified        Boolean @default(false)
  disqualifyReason String?

  createdAt DateTime @default(now())

  @@index([trackingId])
  @@index([productId])
  @@index([merchantId])
  @@index([platform])
  @@index([qualified])
  @@index([createdAt])
}

// ============================================
// COMMISSION MODEL
// ============================================

model Commission {
  id String @id @default(cuid())

  // IMPORTANT CHANGE:
  // clickTrackingId is no longer unique, to allow many orders per click
  clickTrackingId String
  clickTracking   ClickTracking @relation(fields: [clickTrackingId], references: [id], onDelete: Cascade)

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  orderId       String
  orderTotal    Decimal @db.Decimal(10, 2)
  orderCurrency String  @default("SAR")

  commissionRate   Decimal @db.Decimal(5, 2)
  commissionAmount Decimal @db.Decimal(10, 2)

  status CommissionStatus @default(PENDING)
  paidAt DateTime?

  notes String? @db.Text

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  FraudSignal FraudSignal[]

  // CRITICAL: Unique constraint to prevent duplicates per order
  @@unique([merchantId, orderId])
  @@index([merchantId])
  @@index([orderId])
  @@index([status])
  @@index([createdAt])
  @@index([clickTrackingId])
}

// ============================================
// FRAUD SIGNAL MODEL (NEW)
// ============================================

model FraudSignal {
  id String @id @default(cuid())

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  platform Platform
  storeId  String?

  // Optional linkage
  clickTrackingId String?
  clickTracking   ClickTracking? @relation(fields: [clickTrackingId], references: [id], onDelete: SetNull)

  orderId      String?
  commissionId String?
  commission   Commission? @relation(fields: [commissionId], references: [id], onDelete: SetNull)

  signalType FraudSignalType
  severity   FraudSeverity   @default(LOW)
  score      Int             @default(0)

  reason   String? @db.Text
  metadata Json?

  createdAt DateTime @default(now())

  @@index([merchantId])
  @@index([platform])
  @@index([storeId])
  @@index([clickTrackingId])
  @@index([orderId])
  @@index([commissionId])
  @@index([signalType])
  @@index([severity])
  @@index([createdAt])
}

// ============================================
// WEBHOOK LOG MODEL
// ============================================

model WebhookLog {
  id             String @id @default(cuid())
  idempotencyKey String @unique

  event   String
  orderId String

  platform Platform?
  storeId  String?

  merchantId  String?
  processed   Boolean  @default(false)
  error       String?  @db.Text
  payloadJson String?  @db.Text
  processedAt DateTime @default(now())

  @@index([idempotencyKey])
  @@index([orderId])
  @@index([merchantId])
  @@index([platform])
  @@index([storeId])
  @@index([processedAt])
}

// ============================================
// TRENDING LOG
// ============================================

model TrendingLog {
  id        String        @id @default(cuid())
  productId String
  eventType TrendingEvent
  weight    Float
  metadata  Json?
  createdAt DateTime      @default(now())

  @@index([productId, createdAt])
  @@index([eventType])
}

// ============================================
// ENUMS
// ============================================

enum MerchantStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum UserRole {
  CUSTOMER
  MERCHANT
  ADMIN
}

enum TrendingEvent {
  VIEW
  CLICK
  ORDER
  SAVE
}

enum Platform {
  ZID
  SALLA
}

enum CommissionStatus {
  PENDING
  APPROVED
  ON_HOLD // NEW
  PAID
  CANCELLED
}

enum FraudSignalType {
  SELF_PURCHASE_SUSPECTED
  HIGH_FREQUENCY_ORDERS
  MANY_ORDERS_SAME_IP
  MANY_ORDERS_SAME_USER_AGENT
  UNUSUAL_ORDER_VALUE
  REFERRER_REUSED_ACROSS_MERCHANTS
}

enum FraudSeverity {
  LOW
  MEDIUM
  HIGH
}
