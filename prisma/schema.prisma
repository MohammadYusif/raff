// prisma/schema.prisma
// Raff E-Commerce Discovery Platform Database Schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================
// MERCHANT MODEL
// ============================================

model Merchant {
  id            String  @id @default(cuid())
  name          String
  nameAr        String?
  email         String  @unique
  userId        String? @unique
  user          User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  phone         String?
  logo          String?
  description   String? @db.Text
  descriptionAr String? @db.Text

  // Zid Integration (PRIMARY - Phase 1)
  zidStoreId      String?   @unique
  zidStoreUrl     String?
  zidAccessToken  String?   @db.Text
  zidRefreshToken String?   @db.Text
  zidTokenExpiry  DateTime?
  zidManagerToken String?   @db.Text

  // Salla Integration (SECONDARY - Phase 2)
  sallaStoreId      String?   @unique
  sallaStoreUrl     String?
  sallaAccessToken  String?   @db.Text
  sallaRefreshToken String?   @db.Text
  sallaTokenExpiry  DateTime?

  // Status & Approval
  status          MerchantStatus @default(PENDING)
  approvedAt      DateTime?
  approvedBy      String?
  rejectionReason String?        @db.Text

  // Settings
  isActive         Boolean   @default(true)
  autoSyncProducts Boolean   @default(false)
  lastSyncAt       DateTime?

  // Subscription Status
  subscriptionStatus         SubscriptionStatus @default(INACTIVE)
  subscriptionPlan           String?
  subscriptionStartDate      DateTime?
  subscriptionEndDate        DateTime?
  lastSubscriptionCheckAt    DateTime?

  // Commission Settings (DEPRECATED - moving to subscription model)
  commissionRate Decimal @default(5.00) @db.Decimal(5, 2)

  // Relations
  products            Product[]
  clickTrackings      ClickTracking[]
  outboundClickEvents OutboundClickEvent[]
  commissions         Commission[]
  orders              Order[]
  fraudSignals        FraudSignal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([zidStoreId])
  @@index([sallaStoreId])
  @@index([email])
}

// ============================================
// PRODUCT MODEL
// ============================================

model Product {
  id String @id @default(cuid())

  title         String
  titleAr       String?
  description   String? @db.Text
  descriptionAr String? @db.Text

  price         Decimal  @db.Decimal(10, 2)
  currency      String   @default("SAR")
  originalPrice Decimal? @db.Decimal(10, 2)

  images    String[]
  thumbnail String?

  categoryId  String?
  category    Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  productTags ProductTag[]

  // Platform Integration
  sallaProductId     String?
  sallaVariantId     String?
  sallaUrl           String?
  zidProductId       String?
  externalProductUrl String?

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  isActive Boolean @default(true)
  inStock  Boolean @default(true)
  quantity Int?

  trendingScore Float @default(0)
  viewCount     Int   @default(0)
  clickCount    Int   @default(0)
  orderCount    Int   @default(0)

  slug            String  @unique
  metaTitle       String?
  metaDescription String?

  orders              Order[]
  savedByUsers        User[]               @relation("SavedProducts")
  clickTrackings      ClickTracking[]
  outboundClickEvents OutboundClickEvent[]
  cartItems           CartItem[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  lastSyncedAt DateTime?

  @@unique([sallaProductId, merchantId])
  @@unique([zidProductId, merchantId])
  @@index([merchantId])
  @@index([categoryId])
  @@index([trendingScore])
  @@index([isActive, inStock])
  @@index([slug])
  @@index([zidProductId])
}

// ============================================
// CATEGORY MODEL
// ============================================

model Category {
  id            String  @id @default(cuid())
  name          String
  nameAr        String?
  slug          String  @unique
  description   String? @db.Text
  descriptionAr String? @db.Text
  icon          String?
  image         String?

  parentId String?
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryHierarchy")

  order    Int     @default(0)
  isActive Boolean @default(true)

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([parentId])
}

// ============================================
// ORDER MODEL
// ============================================

model Order {
  id String @id @default(cuid())

  // Optional internal order number (for future Raff checkout)
  orderNumber String? @unique

  merchantId String?
  merchant   Merchant? @relation(fields: [merchantId], references: [id], onDelete: SetNull)

  platform Platform?

  customerId String?
  customer   User?   @relation(fields: [customerId], references: [id], onDelete: SetNull)

  // Optional PII for platform orders (recommended optional)
  customerName  String?
  customerEmail String?
  customerPhone String?

  // Platform orders may not map to a single Product
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  quantity   Int     @default(1)
  totalPrice Decimal @db.Decimal(10, 2)
  currency   String  @default("SAR")

  // Zid Integration
  zidOrderId String? @unique
  zidStatus  String?

  // Salla Integration
  sallaOrderId String? @unique
  sallaStatus  String?

  shippingAddress Json?
  shippingCity    String?
  shippingMethod  String?

  status OrderStatus @default(PENDING)

  trackingNumber String?
  trackingUrl    String?

  paymentMethod String?
  paymentStatus String?

  // IMPORTANT CHANGE:
  // Remove @unique to allow multiple orders attributed to the same clickTracking
  clickTrackingId String?
  clickTracking   ClickTracking? @relation(fields: [clickTrackingId], references: [id], onDelete: SetNull)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  confirmedAt DateTime?
  shippedAt   DateTime?
  deliveredAt DateTime?

  @@index([customerId])
  @@index([productId])
  @@index([status])
  @@index([createdAt])
  @@index([merchantId])
  @@index([platform])
  @@index([zidOrderId])
  @@index([sallaOrderId])
  @@index([clickTrackingId])
}

// ============================================
// USER MODEL
// ============================================

model User {
  id String @id @default(cuid())

  name   String
  email  String  @unique
  phone  String?
  avatar String?

  passwordHash         String
  emailVerified        DateTime?
  registrationCompleted Boolean  @default(true)

  role     UserRole @default(CUSTOMER)
  language String   @default("ar")

  orders          Order[]
  savedProducts   Product[]       @relation("SavedProducts")
  clickTrackings  ClickTracking[]
  accounts        Account[]
  sessions        Session[]
  merchantProfile Merchant?
  cartItems       CartItem[]
  notifications   Notification[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  @@index([email])
  @@index([role])
}

// ============================================
// NEXTAUTH MODELS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// EMAIL OTP MODEL
// ============================================

model EmailOTP {
  id        String   @id @default(cuid())
  email     String
  otp       String
  type      OTPType  @default(REGISTRATION)
  attempts  Int      @default(0)
  isUsed    Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email, type])
  @@index([expiresAt])
}

enum OTPType {
  REGISTRATION
  PASSWORD_RESET
  EMAIL_CHANGE
}

// ============================================
// CLICK TRACKING MODEL
// ============================================

model ClickTracking {
  id String @id @default(cuid())

  trackingId String @unique

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  referrerUrl String? @db.Text
  ipAddress   String?
  userAgent   String? @db.Text

  destinationUrl String   @db.Text
  platform       Platform

  sessionId String? @unique

  // Keeps "first conversion happened" info (optional but useful)
  converted      Boolean @default(false)
  convertedCount Int     @default(0)

  // conversionId might collide across platforms, so DON'T make it globally unique.
  conversionId    String?
  conversionValue Decimal? @db.Decimal(10, 2)
  commissionValue Decimal? @db.Decimal(10, 2)
  commissionRate  Decimal? @db.Decimal(5, 2)

  // Relations
  orders      Order[]
  commissions Commission[] // IMPORTANT CHANGE: one click can produce many commissions

  clickedAt       DateTime      @default(now())
  convertedAt     DateTime?
  lastConvertedAt DateTime?
  expiresAt       DateTime
  FraudSignal     FraudSignal[]

  @@unique([platform, conversionId])
  @@index([trackingId])
  @@index([userId])
  @@index([productId])
  @@index([merchantId])
  @@index([sessionId])
  @@index([clickedAt])
  @@index([converted])
  @@index([convertedCount])
  @@index([expiresAt])
  @@index([conversionId])
}

// ============================================
// OUTBOUND CLICK EVENT MODEL
// ============================================

model OutboundClickEvent {
  id String @id @default(cuid())

  trackingId String?

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  platform Platform

  ipHash        String?
  userAgentHash String?

  qualified        Boolean @default(false)
  disqualifyReason String?

  createdAt DateTime @default(now())

  @@index([trackingId])
  @@index([productId])
  @@index([merchantId])
  @@index([platform])
  @@index([qualified])
  @@index([createdAt])
}

// ============================================
// COMMISSION MODEL
// ============================================

model Commission {
  id String @id @default(cuid())

  // IMPORTANT CHANGE:
  // clickTrackingId is no longer unique, to allow many orders per click
  clickTrackingId String
  clickTracking   ClickTracking @relation(fields: [clickTrackingId], references: [id], onDelete: Cascade)

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  orderId       String
  orderTotal    Decimal @db.Decimal(10, 2)
  orderCurrency String  @default("SAR")

  commissionRate   Decimal @db.Decimal(5, 2)
  commissionAmount Decimal @db.Decimal(10, 2)

  status CommissionStatus @default(PENDING)
  paidAt DateTime?

  notes String? @db.Text

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  FraudSignal FraudSignal[]

  // CRITICAL: Unique constraint to prevent duplicates per order
  @@unique([merchantId, orderId])
  @@index([merchantId])
  @@index([orderId])
  @@index([status])
  @@index([createdAt])
  @@index([clickTrackingId])
}

// ============================================
// FRAUD SIGNAL MODEL (NEW)
// ============================================

model FraudSignal {
  id String @id @default(cuid())

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  platform Platform
  storeId  String?

  // Optional linkage
  clickTrackingId String?
  clickTracking   ClickTracking? @relation(fields: [clickTrackingId], references: [id], onDelete: SetNull)

  orderId      String?
  commissionId String?
  commission   Commission? @relation(fields: [commissionId], references: [id], onDelete: SetNull)

  signalType FraudSignalType
  severity   FraudSeverity   @default(LOW)
  score      Int             @default(0)

  reason   String? @db.Text
  metadata Json?

  createdAt DateTime @default(now())

  @@index([merchantId])
  @@index([platform])
  @@index([storeId])
  @@index([clickTrackingId])
  @@index([orderId])
  @@index([commissionId])
  @@index([signalType])
  @@index([severity])
  @@index([createdAt])
}

// ============================================
// WEBHOOK LOG MODEL
// ============================================

model WebhookLog {
  id             String @id @default(cuid())
  idempotencyKey String @unique

  event    String
  orderId  String
  orderKey String?

  platform Platform?
  storeId  String?

  merchantId  String?
  processed   Boolean  @default(false)
  error       String?  @db.Text
  payload     Json?
  processedAt DateTime @default(now())

  @@index([idempotencyKey])
  @@index([orderId])
  @@index([orderKey])
  @@index([merchantId])
  @@index([platform])
  @@index([storeId])
  @@index([processedAt])
}

// ============================================
// TRENDING LOG
// ============================================

model TrendingLog {
  id        String        @id @default(cuid())
  productId String
  eventType TrendingEvent
  weight    Float
  metadata  Json?
  createdAt DateTime      @default(now())

  @@index([productId, createdAt])
  @@index([eventType])
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

// ============================================
// TAG MODEL
// ============================================

model Tag {
  id       String  @id @default(cuid())
  name     String
  nameAr   String?
  slug     String  @unique
  isActive Boolean @default(true)

  products ProductTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([isActive])
}

// ============================================
// PRODUCT TAG MODEL
// ============================================

model ProductTag {
  productId String
  tagId     String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([productId, tagId])
  @@index([tagId])
  @@index([productId])
}

// ============================================
// ENUMS
// ============================================

enum MerchantStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum UserRole {
  CUSTOMER
  MERCHANT
  ADMIN
}

enum TrendingEvent {
  VIEW
  CLICK
  ORDER
  SAVE
}

enum Platform {
  ZID
  SALLA
}

enum CommissionStatus {
  PENDING
  APPROVED
  ON_HOLD // NEW
  PAID
  CANCELLED
}

enum FraudSignalType {
  SELF_PURCHASE_SUSPECTED
  HIGH_FREQUENCY_ORDERS
  MANY_ORDERS_SAME_IP
  MANY_ORDERS_SAME_USER_AGENT
  UNUSUAL_ORDER_VALUE
  REFERRER_REUSED_ACROSS_MERCHANTS
}

enum FraudSeverity {
  LOW
  MEDIUM
  HIGH
}

// ============================================
// NOTIFICATION MODEL
// ============================================

model Notification {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type        NotificationType
  title       String
  titleAr     String?
  message     String           @db.Text
  messageAr   String?          @db.Text
  link        String?
  isRead      Boolean          @default(false)
  readAt      DateTime?
  metadata    Json?
  priority    NotificationPriority @default(NORMAL)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

enum NotificationType {
  ORDER_CREATED
  ORDER_UPDATED
  PRODUCT_SYNC_COMPLETED
  PRODUCT_OUT_OF_STOCK
  NEW_COMMISSION
  PAYOUT_PROCESSED
  MERCHANT_APPROVED
  MERCHANT_REJECTED
  SYSTEM_ANNOUNCEMENT
  SECURITY_ALERT
}

enum NotificationPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

// ============================================
// WEBHOOK EVENT LOG (Idempotency)
// ============================================

model WebhookEvent {
  id String @id @default(cuid())

  platform         Platform
  storeId          String   // merchantId or storeId from webhook
  eventType        String   // order.created, product.updated, etc.
  idempotencyKey   String   // Composite: platform:storeId:eventType:hash
  deliveryHeaderId String?  // Optional delivery ID from webhook provider headers
  payload          Json
  processedAt      DateTime @default(now())
  processingStatus WebhookProcessingStatus @default(PROCESSED)
  errorMessage     String?  @db.Text

  createdAt DateTime @default(now())

  @@unique([platform, storeId, idempotencyKey])
  @@index([platform, storeId])
  @@index([createdAt])
}

enum WebhookProcessingStatus {
  PROCESSED
  FAILED
  DUPLICATE
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELED
  EXPIRED
  TRIAL
}
